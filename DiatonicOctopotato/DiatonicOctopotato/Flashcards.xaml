<Window x:Name="Flashcards1" x:Class="DiatonicOctopotato.Flashcards"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DiatonicOctopotato"
        mc:Ignorable="d"
        Title="Flashcards" Height="675" Width="1200" ResizeMode="NoResize" Closed="Flashcards1_Closed">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Button x:Name="flashBN" Content="Button" HorizontalAlignment="Left" Margin="345,92,0,0" VerticalAlignment="Top" Width="507" Height="319" Grid.ColumnSpan="2" FontSize="36" Click="flashBN_Click"/>
        <Button x:Name="backBN" Content="Back" HorizontalAlignment="Left" Margin="345,482,0,0" VerticalAlignment="Top" Width="242" Height="82" FontSize="36"/>
        <Button x:Name="nextBN" Content="Next" Grid.Column="1" HorizontalAlignment="Left" Margin="10,482,0,0" VerticalAlignment="Top" Width="245" Height="82" FontSize="36" Click="nextBN_Click"/>

    </Grid>
</Window>
