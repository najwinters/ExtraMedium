<Window x:Name="Flashcards1" x:Class="DiatonicOctopotato.Flashcards"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DiatonicOctopotato"
        mc:Ignorable="d"
        Title="Flashcards" Height="675" Width="1200" ResizeMode="NoResize" WindowStartupLocation="CenterScreen" Closed="Flashcards1_Closed_1">
    <Grid>

        <Button x:Name="btnFlashCard" Content="Definition" HorizontalAlignment="Left" Height="172" Margin="34,24,0,0" VerticalAlignment="Top" Width="223" Click="btnFlashCard_Click"/>
        <Button x:Name="btnBack" Content="Back" HorizontalAlignment="Left" Height="34" Margin="22,214,0,0" VerticalAlignment="Top" Width="61" Click="btnBack_Click"/>
        <Button x:Name="btnNext" Content="Next" HorizontalAlignment="Left" Height="34" Margin="212,214,0,0" VerticalAlignment="Top" Width="61" Click="btnNext_Click"/>
        <Button x:Name="btnRight" Content="I got it right." HorizontalAlignment="Left" Height="39" Margin="34,272,0,0" VerticalAlignment="Top" Width="119" Click="btnRight_Click"/>
        <Button x:Name="btnWrong" Content="I got it wrong." HorizontalAlignment="Left" Height="39" Margin="191,272,0,0" VerticalAlignment="Top" Width="119" Click="btnWrong_Click"/>
        <Label x:Name="label" Content="Label" HorizontalAlignment="Left" VerticalAlignment="Top"/>
        <Label x:Name="label1" Content="Score:" HorizontalAlignment="Left" Margin="45,330,0,0" VerticalAlignment="Top"/>
        <Label x:Name="lblScore" Content="0" HorizontalAlignment="Left" Margin="87,330,0,0" VerticalAlignment="Top"/>
        <Label x:Name="label2" Content="TryCount:" HorizontalAlignment="Left" Margin="191,330,0,0" VerticalAlignment="Top"/>
        <Label x:Name="lblTryCount" Content="0" HorizontalAlignment="Left" Margin="251,330,0,0" VerticalAlignment="Top" RenderTransformOrigin="4.375,3.115"/>

        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
       


    </Grid>
</Window>
