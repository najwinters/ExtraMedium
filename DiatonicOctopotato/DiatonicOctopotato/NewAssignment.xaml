<Window x:Name="NewAssignmentWin" x:Class="DiatonicOctopotato.NewAssignment"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DiatonicOctopotato"
        mc:Ignorable="d"
        Title="New Assignment" Height="126.83" Width="300" ResizeMode="NoResize" WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="163*"/>
            <ColumnDefinition Width="131*"/>
        </Grid.ColumnDefinitions>
        <TextBox x:Name="NameBox" HorizontalAlignment="Left" Height="23" Margin="10,28,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="272" TextChanged="textBox_TextChanged" Grid.ColumnSpan="2"/>
        <TextBlock x:Name="textBlock" HorizontalAlignment="Left" Margin="10,10,0,0" TextWrapping="Wrap" Text="Name" VerticalAlignment="Top" Width="272" TextAlignment="Center" Grid.ColumnSpan="2"/>
        <Button x:Name="buttonDone" Content="Create" HorizontalAlignment="Left" Margin="107,65,0,0" VerticalAlignment="Top" Width="75" Click="buttonDone_Click" Grid.ColumnSpan="2"/>

    </Grid>
</Window>
